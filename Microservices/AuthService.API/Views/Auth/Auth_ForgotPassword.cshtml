@model AuthService.API.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cfg = ViewBag.FormLogin as AuthService.API.Models.FormLogin;
}
<div class="login-container">

    <div class="login-image">
        <img src="@cfg?.image" />
    </div>

    <div class="login-form">
        <h2>Quên mật khẩu</h2>

        <form asp-action="Auth_Login" asp-controller="Auth" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserName" name="UserName" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="UserName" class="field-validation-error"></span>
            </div>
            <button type="submit">Gửi email xác nhận</button>
        </form>
        <a href="~/Auth/Auth_Login" style="cursor:pointer;">Quay lại đăng nhập</a>
    </div>

</div>
<style>
    * {
        box-sizing: border-box;
        font-family: 'Segoe UI', sans-serif;
    }

    body {
        margin: 0;
        height: 100vh;
    }

    .login-container {
        display: flex;
        height: 100vh;
    }

    .login-image {
        flex: 1.2;
        overflow: hidden;
    }

        .login-image img {
            width: 110%;
            height: 110%;
            object-fit: cover;
            animation: bgMove 14s ease-in-out infinite;
        }

    @@keyframes bgMove {
        0% {
            transform: scale(1) translate(0,0);
        }

        50% {
            transform: scale(1.08) translate(-20px,-20px);
        }

        100% {
            transform: scale(1) translate(0,0);
        }
    }

    .login-form {
        flex: 1;
        padding: 80px 60px;
        background: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-form h2 {
            margin-bottom: 30px;
        }

    .form-group {
        margin-bottom: 18px;
    }

        .form-group input {
            width: 100%;
            padding: 14px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 15px;
        }

    .field-validation-error {
        color: red;
        font-size: 13px;
        margin-top: 6px;
        display: block;
    }

    .options {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
        margin-bottom: 25px;
    }

    button {
        width: 100%;
        padding: 14px;
        background: #6b7cff;
        border: none;
        color: white;
        border-radius: 8px;
        cursor: pointer;
    }

    .divider {
        margin: 30px 0 15px;
        text-align: center;
        font-size: 13px;
        color: #888;
    }

    input.input-validation-error {
        border-color: red;
    }

    @@media (max-width: 900px) {
        .login-image {
            display: none;
        }
    }
</style>
