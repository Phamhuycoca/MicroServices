@model AuthService.API.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cfg = ViewBag.FormLogin as AuthService.API.Models.FormLogin;
}
<div class="login-container">

    <div class="login-image">
        <img src="@cfg?.image" />
    </div>

    <div class="login-form">
        <h2>@cfg?.title</h2>

        <form asp-action="Auth_Login" asp-controller="Auth" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserName" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="UserName" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>

            <div class="options">
                <label>
                    <input type="checkbox" asp-for="RememberMe" /> Ghi nhớ tài khoản
                </label>
            </div>

            <button type="submit">Đăng nhập</button>
        </form>
        <a href="~/Auth/Auth_ForgotPassword" style="cursor:pointer;">Quên mật khẩu</a>

    </div>
    <div id="loadingOverlay">
        <div class="spinner"></div>
        <div class="loading-text">Đang xử lý...</div>
    </div>
</div>
<style>
    * {
        box-sizing: border-box;
        font-family: 'Segoe UI', sans-serif;
    }

    body {
        margin: 0;
        height: 100vh;
    }

    .login-container {
        display: flex;
        height: 100vh;
    }

    .login-image {
        flex: 1.2;
        overflow: hidden;
    }

        .login-image img {
            width: 110%;
            height: 110%;
            object-fit: cover;
            animation: bgMove 14s ease-in-out infinite;
        }

    @@keyframes bgMove {
        0% {
            transform: scale(1) translate(0,0);
        }

        50% {
            transform: scale(1.08) translate(-20px,-20px);
        }

        100% {
            transform: scale(1) translate(0,0);
        }
    }

    .login-form {
        flex: 1;
        padding: 80px 60px;
        background: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-form h2 {
            margin-bottom: 30px;
        }

    .form-group {
        margin-bottom: 18px;
    }

        .form-group input {
            width: 100%;
            padding: 14px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 15px;
        }

    .field-validation-error {
        color: red;
        font-size: 13px;
        margin-top: 6px;
        display: block;
    }

    .options {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
        margin-bottom: 25px;
    }

    button {
        width: 100%;
        padding: 14px;
        background: #6b7cff;
        border: none;
        color: white;
        border-radius: 8px;
        cursor: pointer;
    }

    .divider {
        margin: 30px 0 15px;
        text-align: center;
        font-size: 13px;
        color: #888;
    }

    input.input-validation-error {
        border-color: red;
    }
    @@media (max-width: 900px) {
        .login-image {
            display: none;
        }
    }

    #loadingOverlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.85);
        display: none;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        z-index: 9999;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 5px solid #ddd;
        border-top: 5px solid #6b7cff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .loading-text {
        margin-top: 15px;
        font-size: 14px;
        color: #555;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

</style>
@if (!ViewData.ModelState.IsValid)
{
    <script>
        window.onload = function () {
            const err = document.querySelector(".field-validation-error");
            if (err) {
                err.previousElementSibling?.focus();
            }
        }
    </script>
}

<script>
        // Hợp lệ → bật loading
        document.getElementById("loadingOverlay").style.display = "flex";
        const btn = form.querySelector("button[type='submit']");
        btn.disabled = true;
        btn.innerText = "Đang xử lý...";
    });
</script>
